@model Polls.Models.DtoModels.CreatePollDto
@{
    ViewBag.Title = "Добавление опроса";
    Layout = "_AdminPollsLayout";
}
    <div class="container">
        <form asp-action="create" asp-controller="Polls">
            <input type="hidden" asp-for="Poll.Id" value="@Guid.NewGuid()" />
            <div class="form-group">
                <label asp-for="Poll.Name" class="control-label">Название</label>
                <input type="text" asp-for="Poll.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Poll.BackgroundId" class="control-label">Фоновая Тема</label>
                <select asp-for="Poll.BackgroundId">
                    @foreach (var background in Model.Backgrounds)
                    {
                        <option value="@background.Id">
                            @background.Name
                        </option>
                    }
                </select>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </div>