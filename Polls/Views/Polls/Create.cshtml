@model Polls.Models.DbModels.Poll
@{
    ViewBag.Title = "Добавление проекта";
}
    <div class="container">
        <form asp-action="create" asp-controller="Projects">
            <input type="hidden" asp-for="Id" value="@Guid.NewGuid()" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </div>