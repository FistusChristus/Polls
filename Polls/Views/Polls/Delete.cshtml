@model Polls.Models.DbModels.Poll
@{
    ViewBag.Title = "Удаление опроса";
    Layout = "_AdminPollsLayout";
}

<div class="container">
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        <form asp-action="Delete" asp-controller="Polls" method="post">
            <div class="form-group text-center">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>