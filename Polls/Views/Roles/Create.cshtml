@model RoleCreateDto
@{ Layout = "_AdminLayout";}

    <div class="container">
        <form asp-action="Create" asp-controller="Roles" method="post" class="text-center">
            <input type="hidden" asp-for="Id" value="@Guid.NewGuid()"/>
            <div class="form-group">
                <label asp-for="RoleName">Новая роль</label>
                <input asp-for="RoleName" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>