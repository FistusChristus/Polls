@{
    ViewBag.Title = "Список ответов";
    Layout = "_AdminPollsLayout";
}
<h6>Ответы</h6>
<div class="row">
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var answer in Model)
                {
                    <tr>
                        <td>@answer.Text</td>
                        <td class="text-right">
                            <a asp-action="edit" asp-controller="answers" asp-route-id="@answer.Id" class="btn btn-outline-primary">Edit</a>
                            <a asp-action="delete" asp-controller="answers" asp-route-id="@answer.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
