@model Polls.Models.DbModels.PollQuestion
@{
    ViewBag.Title = "Удаление вопроса";
    Layout = "_AdminPollsLayout";
}

<div class="container">
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>

    <div>
        <form asp-action="Delete" asp-controller="Questions" method="post">
            <div class="form-group text-center">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>