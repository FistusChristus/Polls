@model Polls.Models.DtoModels.EditQuestionDto
@{
    ViewBag.Title = "Редактирование вопроса";
    Layout = "_AdminPollsLayout";
}
<div class="container">
    <form class="mb-5" asp-action="edit" asp-controller="Questions">
        <input type="hidden" asp-for="PollQuestion.Id" value="@Model.PollQuestion.Id" />
        <div class="form-group">
            <label asp-for="PollQuestion.Text" class="control-label">Вопрос</label>
            <input type="text" asp-for="PollQuestion.Text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PollQuestion.PollId" class="control-label">Целевой опрос</label>
            <select asp-for="PollQuestion.PollId">
                @foreach (var poll in Model.Polls)
                {
                    <option value="@poll.Id">
                        @poll.Name
                    </option>
                }
            </select>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>

    <div class="row">
        <h6>Questions</h6>
    </div>
    <div class="row">
        <div class="col-8">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col" class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var question in Model.PollQuestion.Answers)
                    {
                        <tr>
                            <td>@question.Text</td>
                            <td class="text-right">
                                <a asp-action="edit" asp-controller="questions" asp-route-id="@question.Id" class="btn btn-outline-primary">Edit</a>
                                <a asp-action="delete" asp-controller="questions" asp-route-id="@question.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>